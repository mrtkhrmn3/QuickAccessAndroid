<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ResidentMainMenuActivity">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resident Menu"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Food Delivery Button -->
    <Button
        android:id="@+id/foodDeliveryBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Food Delivery"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <!-- Package Button -->
    <Button
        android:id="@+id/packageBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Package"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/foodDeliveryBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <!-- Guest Coming Button -->
    <Button
        android:id="@+id/guestComingBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guest Coming"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/packageBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <!-- Active Notifications Button -->
    <Button
        android:id="@+id/activeNotificationsBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Active Notifications"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/guestComingBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#ff9e00"/>

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/activeNotificationsBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#f44444"/>

</androidx.constraintlayout.widget.ConstraintLayout>
